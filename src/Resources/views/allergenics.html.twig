{% set allergenics = firstVariant.allergenics | length ? firstVariant.allergenics : product.allergenics %}

<div id="ecolos_product_variant_allergenics">
    {% if allergenics | length %}
        <strong class="mt-1"
                style="display: inline;">{{ "ecolos_sylius_eu_plugin.allergenInfo" | trans }}
            :</strong>

        {{ allergenics | raw }}
    {% endif %}
</div>


