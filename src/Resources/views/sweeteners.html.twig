{% macro aspartame(product, variant) %}
    {% if variant.aspartame is not null %}
        <div>{{ 'ecolos_sylius_eu_plugin.aspartame' | trans }}</div>
    {% elseif product.aspartame == true %}
        <div>{{ 'ecolos_sylius_eu_plugin.aspartame' | trans }}</div>
    {% endif %}
{% endmacro %}

