{% macro all(product, variant) %}
    {% import _self as macros %}

    {{ macros.aspartame(product, variant) | raw }}
    {{ macros.sweetener(product, variant) | raw }}
    {{ macros.sweetenerAndSugar(product, variant) | raw }}
    {{ macros.tooMuchSugarReplacer(product, variant) | raw }}
{% endmacro %}