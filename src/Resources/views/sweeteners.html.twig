        <div>{{ 'ecolos_sylius_eu_plugin.sweetener' | trans }}</div>
    {% elseif product.sweetener == true %}
        <div>{{ 'ecolos_sylius_eu_plugin.sweetener' | trans }}</div>
    {% endif %}
{% endmacro %}

